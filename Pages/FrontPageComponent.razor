

<div class="container">
    <div class="row">
        <div class="col-md-12">
            @if (UploadedFiles == null)
            {
                <div style="margin-top:15%">
                    <div class="loader-container">
                        <div class="cube-loader"></div>
                        <br />
                    </div>
                    <div class="text-center text-secondary fw-bold mt-4">Bringing Your Hunger Killer</div>
                </div>
            }
            else if (UploadedFiles.Count == 0)
            {
                <div class=" alert alert-info">No Product Available</div>
                <Footer_Page />
            }
            else
            {
                <div class="control-container text-dark">
                    <SfCarousel ButtonsVisibility="CarouselButtonVisibility.VisibleOnHover" AnimationEffect="CarouselAnimationEffect.Slide" AutoPlay="true" ShowIndicators="true">
                        <ChildContent>
                            @foreach (Product prod in UploadedFiles.OrderByDescending(_ => _.Price).Take(5)!)
                            {
                                <CarouselItem>
                                    <figure class="img-container">
                                        <img src="@FixBase64(prod.Base64Img)" style="height: 280px; object-fit: contain;" class="float-end carousel-food-img" />
                                    </figure>
                                    <div class="d-flex  justify-content-center">
                                        <div style="position:absolute;bottom:50px">
                                            <div class="vstack gap-3 mb-3">
                                                <div>
                                                    <p>
                                                        <span style="font-family:Impact ; text-indent:2px;" class="text-dark fw-bold display-2">
                                                            @prod.Name
                                                            <sup style="font-family : 'Courier New'">
                                                                <span class="badge rounded-pill bg-primary fs-6">    </span>
                                                                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger" style="font-family:sans-serif;font-size:11px">
                                                                    @((prod.Quantity - 1) > 0 ? $"{prod.Quantity - 1}+" : prod.Quantity)
                                                                    <span class="visually-hidden">Unread Messages</span>
                                                                </span>
                                                            </sup>
                                                        </span>
                                                    </p>
                                                </div>
                                            </div>
                                            <div class="hstack gap-1 d-flex justify-content-center">
                                                <button class="btn btn-secondary fw-bold" id="stylebutton" @onclick="@(() => OpenProduct(prod.Id))"><i class="fa fa-list"></i>Details</button>
                                                <button class="btn btn-outline-danger fw-bold" id="stylebutton" @onclick="BuyInstant"><i class="fa fa-cart-plus"></i>Buy Now</button>
                                                <button class="btn btn-success fw-bold"
                                                        @onclick="@(() => AddToCart(prod))">
                                                    <i class="fa fa-shopping-cart"></i> Add to Cart
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </CarouselItem>
                            }
                        </ChildContent>
                        <PreviousButtonTemplate>
                            <img src="/left-arrow.png" alt="Alternate Text" id="styleCursor" width="50" height="50" />
                        </PreviousButtonTemplate>
                        <NextButtonTemplate>
                            <img src="/right-arrow.png" alt="Alternate Text" id="styleCursor" width="50" height="50" />
                        </NextButtonTemplate>
                        <IndicatorsTemplate>
                            <div class="indicator"></div>
                        </IndicatorsTemplate>
                    </SfCarousel>
                </div>
            }
        </div>
    </div>
</div>

@if (!string.IsNullOrEmpty(Message))
{
    <p class="text-success fw-bold mt-2">@Message</p>
}


@if (UploadedFiles != null && UploadedFiles.Count > 0)
{
    <div class="container mt-5">

        <h2 class="text-center fw-bold mb-4" style="font-size:40px;">
            You Might Also Like
        </h2>

        <div class="row g-4">

            @foreach (var prod in UploadedFiles.Take(12))
            {
                <div class="col-6 col-md-3">

                    <div class="card shadow-sm border rounded-4 p-3 h-100"
                         style="border:2px solid #ddd; background:#fff;">

                        <img src="@FixBase64(prod.Base64Img)"
                             class="card-img-top"
                             style="height:140px; object-fit:contain;" />

                        <div class="card-body text-center">

                            <h5 class="fw-bold">@prod.Name</h5>
                            <p class="fw-semibold text-dark">@prod.Price</p>

                            <button class="btn btn-warning fw-bold px-3 py-2 rounded-3 mb-2 w-100"
                                    @onclick="@(() => OpenProduct(prod.Id))">
                                Details
                            </button>

                            <button class="btn btn-success fw-bold w-100"
                                    @onclick="@(() => AddToCart(prod))">
                                <i class="fa fa-shopping-cart"></i> Add to Cart
                            </button>

                        </div>

                    </div>

                </div>
            }

        </div>
    </div>
    <Footer_Page />
}

@inject CartState CartState


@code {
    private List<Cart>? CartItems;
    private List<Product>? UploadedFiles;
    private string Message = "";

    protected override async Task OnInitializedAsync()
    {
        UploadedFiles = await Http.GetFromJsonAsync<List<Product>>("get-food");
        CartItems = await Http.GetFromJsonAsync<List<Cart>>("cart/get");
        int totalQty = CartItems.Sum(i => i.Quantity);
        CartState.SetItems(totalQty);
    }
    private void OpenProduct(int productId)
    {
        var parameters = new ModalParameters();
        parameters.Add("ProductId", productId);

        model.Show<Front_By_Click>("", parameters);
    }

    private async Task AddToCart(Product prod)
    {
        var response = await Http.PostAsJsonAsync("cart/add", prod);
        var list = await Http.GetFromJsonAsync<List<Cart>>("cart/get");
        int totalQty = list.Sum(i => i.Quantity);
        CartState.SetItems(totalQty);

        if (response.IsSuccessStatusCode)
        {
            Message = "✔ Added to cart successfully!";
        }
        else
        {
            Message = "❌ Failed to add to cart.";
        }

        // Hide message after 3 seconds
        await Task.Delay(3000 * 5);
        Message = null;
        StateHasChanged();
    }



    private string FixBase64(string? base64)
    {
        if (string.IsNullOrWhiteSpace(base64))
            return "";

        base64 = base64.Trim();

        // Remove any incorrect or duplicate prefixes
        string[] wrongPrefixes =
        {
        "data : image/png;base64,",
        "data:image/png;base64,",
        "data:image/png;base64",
        "data:image/PNG;base64,"
    };

        foreach (var p in wrongPrefixes)
        {
            base64 = base64.Replace(p, "", StringComparison.OrdinalIgnoreCase);
        }

        base64 = base64.Trim();

        // Always return correct PNG Data URI
        return $"data:image/png;base64,{base64}";
    }

    private void BuyInstant()
    {
        if (LoginState.IsLoggedIn)
        {
            Nav.NavigateTo("/save-address");
        }
        else
        {
            Nav.NavigateTo("/login");
        }
    }

}




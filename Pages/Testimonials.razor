@page "/testimonials"
<PageTitle>Testimonials</PageTitle>

<div style="min-height:100vh;" class="container my-5">
    <p class="lead text-center mb-5">
        Read what people say — and share your own experience.
    </p>

    <div class="row g-4">

        <!-- LEFT SIDE → BIGGER FORM -->
        <div class="review-card">
            <h2 class="review-title">WRITE A REVIEW</h2>

            <EditForm Model="review" OnValidSubmit="SubmitReview">
                <DataAnnotationsValidator />
                <ValidationSummary />

                <label>Your Name *</label>
                <InputText class="review-input" placeholder="Full Name"
                           @bind-Value="review.Reviewer_Name" />

                <label>Your Review *</label>
                <InputTextArea class="review-textarea" rows="3"
                               placeholder="Share your experience"
                               @bind-Value="review.Review_Text" />

                <label>Rating *</label>
                <InputSelect class="review-input" @bind-Value="review.Star">
                    <option value="5">⭐⭐⭐⭐⭐</option>
                    <option value="4">⭐⭐⭐⭐</option>
                    <option value="3">⭐⭐⭐</option>
                    <option value="2">⭐⭐</option>
                    <option value="1">⭐</option>
                </InputSelect>

                <button type="submit" class="review-btn">Submit Review</button>
            </EditForm>

            @if (message != null)
            {
                <div class="alert-success-custom mt-2">@message</div>
            }
        </div>


        <!-- RIGHT SIDE → SMALLER REVIEWS -->
        <div style="margin-left:30%;" class="col-lg-3 col-md-5">
            <div class="p-3 bg-white shadow-sm rounded-3 public-reviews-box" style="max-height: 600px; overflow-y:auto;">

                <h5 class="mb-4">Public Reviews</h5>

                @if (reviews == null)
                {
                    <div class="text-center mt-5 mb-5">
                        <div class="loader-container">
                            <div class="cube-loader"></div>
                        </div>
                        <div class="text-secondary mt-3 fw-bold">Loading reviews...</div>
                    </div>
                }
                else if (!reviews.Any())
                {
                    <p>No reviews yet. Be the first to write one!</p>
                }
                else
                {
                    @foreach (var r in reviews)
                    {
                        <div class="border rounded p-3 mb-3 position-relative">

                            <!-- DELETE -->
                            <button class="btn-close position-absolute top-0 end-0 m-2"
                                    @onclick="() => DeleteReview(r)">
                            </button>

                            @if (editReview == r)
                            {
                                <!-- EDIT MODE -->
                                <div>
                                    <label class="fw-bold">Name:</label>
                                    <InputText class="form-control mb-2"
                                               @bind-Value="editBuffer.Reviewer_Name" />

                                    <label class="fw-bold">Review:</label>
                                    <InputTextArea class="form-control mb-2" rows="3"
                                                   @bind-Value="editBuffer.Review_Text" />

                                    <label class="fw-bold">Rating:</label>
                                    <InputSelect class="form-control mb-2"
                                                 @bind-Value="editBuffer.Star">
                                        <option value="5">⭐⭐⭐⭐⭐</option>
                                        <option value="4">⭐⭐⭐⭐</option>
                                        <option value="3">⭐⭐⭐</option>
                                        <option value="2">⭐⭐</option>
                                        <option value="1">⭐</option>
                                    </InputSelect>

                                    <button class="btn btn-success me-2"
                                            @onclick="() => SaveEdit(r)">
                                        Save
                                    </button>
                                    <button class="btn btn-secondary"
                                            @onclick="CancelEdit">
                                        Cancel
                                    </button>
                                </div>
                            }
                            else
                            {
                                <!-- VIEW MODE -->
                                <h6>@RenderStars(r.Star)</h6>
                                <p>@r.Review_Text</p>
                                <p class="mb-0"><strong>- @r.Reviewer_Name</strong></p>

                                <button class="btn btn-sm btn-outline-primary mt-2"
                                        @onclick="() => BeginEdit(r)">
                                    Edit
                                </button>
                            }
                        </div>
                    }
                }
            </div>
        </div>

    </div>
</div>

<style>
    .review-card {
        background: #ffffff;
        padding: 30px;
        border-radius: 12px;
        width: 450px;
        box-shadow: 0 2px 12px rgba(0,0,0,0.08);
    }

        .review-card:hover {
            transform: translateY(-3px);
        }

    .review-title {
        font-size: 22px;
        font-weight: 700;
        text-align: center;
        margin-bottom: 20px;
        letter-spacing: 1px;
    }

    .review-input,
    .review-textarea {
        width: 100%;
        padding: 12px;
        border-radius: 10px;
        border: 1.5px solid #ddd;
        margin-bottom: 15px;
        font-size: 15px;
        background: #fafafa;
    }

        .review-input:focus,
        .review-textarea:focus {
            border-color: #ff7417;
            box-shadow: 0 0 5px rgba(255,116,23,0.3);
            outline: none;
        }

    .review-btn {
        width: 100%;
        background: #ff7417;
        color: white;
        padding: 12px;
        font-size: 16px;
        border-radius: 12px;
        border: none;
        font-weight: 600;
        cursor: pointer;
        transition: 0.3s;
    }

        .review-btn:hover {
            background: #e96310;
        }

    .alert-success-custom {
        background: #e2f9e6;
        padding: 10px;
        border-radius: 10px;
        color: #1b8a2f;
        font-weight: 600;
        text-align: center;
    }

</style>

<Footer_Page />

@code {
    List<Testimonial>? reviews;
    Testimonial review = new();
    string? message;

    Testimonial? editReview = null;
    Testimonial editBuffer = new();

    protected override async Task OnInitializedAsync()
    {
        reviews = await Http.GetFromJsonAsync<List<Testimonial>>("get-review");
    }

    private string RenderStars(int rating) => new string('⭐', rating);

    private async Task SubmitReview()
    {
        var response = await Http.PostAsJsonAsync("add-review", review);

        if (response.IsSuccessStatusCode)
        {
            reviews.Add(new Testimonial
            {
                Reviewer_Name = review.Reviewer_Name,
                Review_Text = review.Review_Text,
                Star = review.Star
            });

            message = $"Thanks {review.Reviewer_Name}! Your review was submitted.";
            review = new Testimonial();
        }
        else
        {
            message = "Failed to submit review ❌";
        }
    }

    void BeginEdit(Testimonial r)
    {
        editReview = r;
        editBuffer = new Testimonial
        {
            Reviewer_Name = r.Reviewer_Name,
            Review_Text = r.Review_Text,
            Star = r.Star
        };
    }

    void CancelEdit()
    {
        editReview = null;
        editBuffer = new();
    }

    async Task SaveEdit(Testimonial original)
    {
        var res = await Http.PutAsJsonAsync(
            $"update-review-by-name/{original.Reviewer_Name}", editBuffer);

        if (res.IsSuccessStatusCode)
        {
            original.Reviewer_Name = editBuffer.Reviewer_Name;
            original.Review_Text = editBuffer.Review_Text;
            original.Star = editBuffer.Star;

            editReview = null;
        }
    }

    async Task DeleteReview(Testimonial r)
    {
        bool confirm = await js.InvokeAsync<bool>("confirm",
            $"Delete review by {r.Reviewer_Name}?");
        if (!confirm) return;

        var res = await Http.DeleteAsync(
            $"delete-review-by-name/{r.Reviewer_Name}");

        if (res.IsSuccessStatusCode)
        {
            reviews.Remove(r);
            StateHasChanged();
        }
    }
}

<style>
    .public-reviews-box {
        border-radius: 20px;
    }
</style>

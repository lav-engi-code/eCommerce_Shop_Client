@page "/contact"
<PageTitle>Contact</PageTitle>

<div style="min-height:100vh;" class="contact-page">

    <div class="contact-card">
        <h2 class="contact-title">CONTACT US</h2>

        <EditForm Model="contact" OnValidSubmit="SubmitContact">
            <DataAnnotationsValidator />
            <ValidationSummary />

            <label>Your Name *</label>
            <InputText class="contact-input" @bind-Value="contact.Full_Name" />
            <label>Your Phone *</label>
            <InputText class="contact-input" @bind-Value="contact.Phone" />
            <label>Your Email *</label>
            <InputText type="email" class="contact-input" @bind-Value="contact.Email" />

            <label>How can we help you?</label>
            <InputTextArea class="contact-textarea" @bind-Value="contact.Message" />

            <button type="submit" class="send-btn">Send Message</button>
        </EditForm>

        @if (successMessage != null)
        {
            <div class="alert-success-custom">@successMessage</div>
        }
    </div>

    <div class="contact-info">
        <h2 class="open-title">WE'RE OPEN</h2>

        <p>All days: 7 am – 11 pm</p>

        <h5>LOCATIONS</h5>
        <p>Delhi NCR | Mumbai | Uttar Pradesh</p>

        <p>Email: lavkumarvishwakarma9129@gmail.com</p>
        <p>Contact: +91 XXXXXXXXXX</p>

        <div class="social-icons">
            <i class="bi bi-facebook"></i>
            <i class="bi bi-instagram"></i>
            <i class="bi bi-twitter"></i>
        </div>
    </div>

</div>

<style>
    .contact-page {
        display: flex;
        justify-content: center;
        gap: 50px;
        padding: 50px;
    }

    .contact-card {
        background: white;
        padding: 30px;
        width: 450px;
        border-radius: 12px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.1);
    }

    .contact-title {
        text-align: center;
        margin-bottom: 20px;
        font-weight: bold;
    }

    label {
        font-weight: 600;
        margin-top: 12px;
    }

    .contact-input {
        width: 100%;
        padding: 10px;
        border-radius: 6px;
        border: 1px solid #ccc;
        margin-bottom: 10px;
    }

    .row-inputs {
        display: flex;
        gap: 15px;
    }

    .contact-textarea {
        width: 100%;
        height: 120px;
        padding: 10px;
        border-radius: 6px;
        border: 1px solid #ccc;
    }

    .send-btn {
        width: 100%;
        margin-top: 15px;
        padding: 12px;
        background: #ff5c00;
        color: white;
        border: none;
        border-radius: 6px;
        font-size: 18px;
    }

        .send-btn:hover {
            background: #e65100;
        }

    .contact-info {
        margin-left:20%;
        margin-top:90px;
        max-width: 350px;
        padding-top: 20px;
    }

    .open-title {
        font-weight: bold;
    }

    .social-icons i {
        font-size: 30px;
        margin-right: 15px;
        cursor: pointer;
    }

</style>

@code {
    Contact contact = new Contact();
    string? successMessage;

    private async Task SubmitContact()
    {
        try
        {
            var response = await Http.PostAsJsonAsync("add-contact", contact);

            if (response.IsSuccessStatusCode)
            {
                successMessage = "Your message has been sent successfully! 🎉";
                contact = new Contact();
            }
            else
            {
                successMessage = "Failed to send message ❌";
            }
        }
        catch (Exception ex)
        {
            successMessage = $"Error: {ex.Message}";
        }
    }
}
<Footer_Page />
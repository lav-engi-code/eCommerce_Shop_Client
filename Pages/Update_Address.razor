@page "/edit-address/{Id:int}"
@inject HttpClient Http
@inject NavigationManager Nav
@inject LoginState LoginState

<PageTitle>Edit Address</PageTitle>

<div class="container mt-4" style="min-height:100vh;">
    <h2 class="fw-bold text-center mb-4" style="font-size: 40px;">Edit Address</h2>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg rounded-4 p-4">
                <h4 class="mb-3">Update Address</h4>

                <!-- NAME -->
                <div class="mb-3">
                    <label class="form-label fw-bold">Full Name</label>
                    <input class="form-control form-control-lg" @bind="AddressModel.Name" placeholder="Enter your full name" />
                </div>

                <!-- MOBILE -->
                <div class="mb-3">
                    <label class="form-label fw-bold">Mobile Number</label>
                    <input class="form-control form-control-lg" @bind="AddressModel.Mobile" maxlength="10" placeholder="Enter mobile number" />
                </div>

                <!-- ADDRESS -->
                <div class="mb-3">
                    <label class="form-label fw-bold">Full Address</label>
                    <textarea class="form-control form-control-lg" rows="3" @bind="AddressModel.FullAddress" placeholder="House No, Street, Area"></textarea>
                </div>

                <!-- CITY -->
                <div class="mb-3">
                    <label class="form-label fw-bold">City</label>
                    <input class="form-control form-control-lg" @bind="AddressModel.City" placeholder="Enter your city" />
                </div>

                <!-- STATE -->
                <div class="mb-3">
                    <label class="form-label fw-bold">State</label>
                    <input class="form-control form-control-lg" @bind="AddressModel.State" placeholder="Enter your state" />
                </div>

                <!-- PINCODE -->
                <div class="mb-3">
                    <label class="form-label fw-bold">Pin Code</label>
                    <input class="form-control form-control-lg" @bind="AddressModel.PinCode" maxlength="6" placeholder="Enter 6 digit pin code" />
                </div>

                <!-- BUTTONS -->
                <div class="mt-3 d-flex justify-content-between">
                    <button class="btn btn-outline-secondary px-4" @onclick="GoBack">
                        <i class="fa fa-arrow-left"></i> Back
                    </button>

                    <button class="btn btn-danger px-4" @onclick="UpdateAddress">
                        <i class="fa fa-save"></i> Update
                    </button>
                </div>

                @if (!string.IsNullOrEmpty(Message))
                {
                    <div class="alert alert-success text-center mt-3 fw-bold">
                        @Message
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public int Id { get; set; }
    private Address AddressModel = new();
    private string Message = "";

    protected override async Task OnInitializedAsync()
    {
        // Load address data by ID
        AddressModel = await Http.GetFromJsonAsync<Address>($"/address/get/{Id}");

        // Ensure the user can only edit their own address
        if (AddressModel.UserEmail != LoginState.UserEmail)
        {
            Nav.NavigateTo("/");
        }
    }

    private async Task UpdateAddress()
    {
        // Attach logged-in user email automatically
        AddressModel.UserEmail = LoginState.UserEmail;

        var response = await Http.PutAsJsonAsync("/address/update", AddressModel);

        if (response.IsSuccessStatusCode)
        {
            Message = "✔ Address updated successfully!";
            await Task.Delay(1500);
            Nav.NavigateTo("/save-address");
        }
        else
        {
            Message = "❌ Could not update address. Try again.";
        }
    }

    private void GoBack() => Nav.NavigateTo("/save-address");
}

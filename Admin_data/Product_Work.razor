@page "/admin/products"
<PageTitle>Admin - All Food</PageTitle>

<div class="container mt-5">
    <h2 class="text-center fw-bold" style="font-family: Cambria; font-size: 32px;">
        Manage Foods
    </h2>

    <p class="text-muted text-center mb-5" style="font-size: 18px;">
        Admin panel to add, edit, or delete food items.
    </p>

    <!-- Add Product Button -->
    <div class="text-end mb-4">
        <button class="btn btn-primary" @onclick="@(() => Nav.NavigateTo("/add-product"))">
            <i class="fa fa-plus"></i> Add Product
        </button>
    </div>

    @if (UploadedFiles == null)
    {
        <div style="margin-top:5%">
            <div class="loader-container">
                <div class="cube-loader"></div>
                <br />
            </div>
            <div class="text-center text-secondary fw-bold mt-4">ADMIN - Loading Products Workshop</div>
        </div>
    }
    else if (!UploadedFiles.Any())
    {
        <p>No products found.</p>
    }
    else
    {
        <div class="row g-4">
            @foreach (var prod in UploadedFiles)
            {
                <div class="col-6 col-md-4 col-lg-3">
                    <div class="card shadow-sm border-0 rounded-4 product-card">
                        <div class="card-body text-center">
                            <h5 class="fw-bold">@prod.Name</h5>
                        </div>
                        <div class="card-footer d-flex justify-content-between">
                            <button class="btn btn-sm btn-warning"
                                    @onclick="@(() => Nav.NavigateTo($"/admin/products/edit/{prod.Id}"))">
                                <i class="fa fa-pen"></i> Edit
                            </button>

                            <button class="btn btn-sm btn-danger" @onclick="() => DeleteProduct(prod.Id)">
                                <i class="fa fa-trash"></i> Delete
                            </button>
                        </div>

                    </div>
                </div>
            }
        </div>
    }
</div>

@code {
    private List<Product>? UploadedFiles;

    protected override async Task OnInitializedAsync()
    {
        await LoadProducts();
    }

    private async Task LoadProducts()
    {
        UploadedFiles = await Http.GetFromJsonAsync<List<Product>>("get-food");
    }

    private string FixBase64(string? base64)
    {
        if (string.IsNullOrWhiteSpace(base64))
            return "";

        base64 = base64.Trim();
        string[] wrongPrefixes =
        {
            "data : image/png;base64,",
            "data:image/png;base64,",
            "data:image/png;base64",
            "data:image/PNG;base64,"
        };

        foreach (var p in wrongPrefixes)
        {
            base64 = base64.Replace(p, "", StringComparison.OrdinalIgnoreCase);
        }

        return $"data:image/png;base64,{base64}";
    }

    private async Task DeleteProduct(int id)
    {
        bool confirm = await js.InvokeAsync<bool>("confirm", $"Are you sure you want to delete this product?");
        if (!confirm) return;

        var response = await Http.DeleteAsync($"delete-food/{id}");
        if (response.IsSuccessStatusCode)
        {
            await LoadProducts(); // Refresh list
        }
        else
        {
            await js.InvokeVoidAsync("alert", "Failed to delete product.");
        }
    }
}

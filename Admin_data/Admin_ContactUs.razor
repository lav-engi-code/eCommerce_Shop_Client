@page "/admin/contacts"
<PageTitle>Admin - Contacts</PageTitle>

<div class="container mt-5">
    <h2 class="text-center fw-bold" style="font-size:32px; font-family:Cambria;">
        Manage Contacts
    </h2>

    @if (Contacts == null)
    {
        <div style="margin-top:15%">
            <div class="loader-container">
                <div class="cube-loader"></div>
                <br />
            </div>
            <div class="text-center text-secondary fw-bold mt-4">ADMIN - Bringing Contact Forms</div>
        </div>
    }
    else if (!Contacts.Any())
    {
        <p class="text-center text-muted mt-3">No contacts found.</p>
    }
    else
    {
        <table class="table table-striped table-bordered mt-4">
            <thead class="table-dark">
                <tr>
                    <th>Full Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Message</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var contact in Contacts)
                {
                    <tr>
                        <td>@contact.Full_Name</td>
                        <td>@contact.Email</td>
                        <td>@contact.Phone</td>
                        <td style="max-width:300px; word-break:break-word; white-space:normal;">
                            @contact.Message
                        </td>
                        <td>
                            <button class="btn btn-danger btn-sm"
                                    @onclick="() => DeleteContact(contact.Phone)">
                                <i class="fa fa-trash"></i> Delete
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

@code {
    private List<Contact>? Contacts;

    protected override async Task OnInitializedAsync()
    {
        await LoadContacts();
    }

    private async Task LoadContacts()
    {
        Contacts = await Http.GetFromJsonAsync<List<Contact>>("/get-contact");
    }

    private async Task DeleteContact(string phone)
    {
        bool confirm = await js.InvokeAsync<bool>("confirm", $"Are you sure you want to delete contact {phone}?");
        if (!confirm) return;

        var response = await Http.DeleteAsync($"/delete-contact/{phone}");
        if (response.IsSuccessStatusCode)
        {
            await LoadContacts(); // Refresh the table
        }
        else
        {
            await js.InvokeVoidAsync("alert", "Failed to delete contact.");
        }
    }
}

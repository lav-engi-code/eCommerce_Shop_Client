@page "/admin/contacts"
<PageTitle>Admin - Contacts</PageTitle>

<div class="container mt-5">
    <h2 class="text-center fw-bold" style="font-size:32px; font-family:Cambria;">
        Feedback Forms
    </h2>

    @if (Contacts == null)
    {
        <div style="margin-top:15%">
            <div class="loader-container">
                <div class="cube-loader"></div>
                <br />
            </div>
            <div class="text-center text-secondary fw-bold mt-4">ADMIN - Bringing Feedback Forms</div>
        </div>
    }
    else if (!Contacts.Any())
    {
        <p class="text-center text-muted mt-3">No contacts found.</p>
    }
    else
    {
        <table class="table table-striped table-bordered mt-4">
            <thead class="table-dark">
                <tr>
                    <th>Date - Time</th>
                    <th>Full Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Message</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var contact in Contacts)
                {
                    <tr>
                        <td>@contact.Date</td>
                        <td>@contact.Full_Name</td>
                        <td>@contact.Email</td>
                        <td>@contact.Phone</td>
                        <td style="max-width:300px; word-break:break-word; white-space:normal;">
                            @contact.Message
                        </td>
                        <td>
                            <button class="btn btn-info btn-sm"
                                    @onclick="() => ArchiveContact(contact)">
                                <i class="fa fa-archive"></i> Archive
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

@code {
    private List<Contact>? Contacts;

    protected override async Task OnInitializedAsync()
    {
        await LoadContacts();
    }

    private async Task LoadContacts()
    {
        var contacts = await Http.GetFromJsonAsync<List<Contact>>("/get-contact");
        Contacts = contacts?.OrderByDescending(c => c.Date).ToList();
    }

    private async Task ArchiveContact(Contact contact)
    {
        bool confirm = await js.InvokeAsync<bool>("confirm",
            $"Are you sure you want to archive and delete contact {contact.Full_Name} ({contact.Phone})?");
        if (!confirm) return;

        // Call the archive & delete endpoint
        var response = await Http.PostAsJsonAsync("/archive-delete-contact", contact);

        if (response.IsSuccessStatusCode)
        {
            await LoadContacts(); // Reload the contact list
            await js.InvokeVoidAsync("alert", "Contact archived and deleted successfully!");
        }
        else
        {
            await js.InvokeVoidAsync("alert", "Failed to archive contact.");
        }
    }
}
